{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2015",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/assets/*": ["assets/*"],
      "@/data/*": ["assets/data/*"],
      "@/icons/*": ["assets/icons/*"],
      "@/style/*": ["assets/style/*"],
      "@/components/*": ["components/*"],
      "@/config/*": ["config/*"],
      "@/pages/*": ["pages/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    ".next",
    "coverage",
    ".npm",
    ".yarn"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["react", "react-dom"]
  }
}
