{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "build",
    "outDir": "lib",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "build/",
    "paths": {
      "icons/*": [
        "icons/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "src",
  ]
}